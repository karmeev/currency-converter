{
  "Application": "Currency Converter",
  "AllowedHosts": "*",
  "DataProtectionKeysDirectory": "",
  "RateLimiter": {
    "PermitLimit": 1,
    "DurationMilliseconds": 1,
    "QueueLimit": 1,
    "RejectionStatusCode": 429,
    "QueueOrder": "OldestFirst"
  },
  "Data": {
    "Cache": {
      "ExchangeRatesTtl": "00:00:05",
      "ExchangeRatesHistoryTtl": "00:00:05",
      "ConversionResultTtl": "00:00:05"
    }
  },
  "Infrastructure": {
    "Logger": {
      "DisableLogger": false,
      "EnableDebugOptions": true,
      "Console": {
        "ConsoleTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {NewLine}{Exception}",
        "LogLevel": "Debug"
      },
      "ELK": {
        "IndexFormat": "currency-converter-logs-{0:yyyy.MM.dd}",
        "LogLevel": "Debug",
        "LogEndpoint": "http://elasticsearch:9200"
      },
      "Telemetry": {
        "JaegerEndpoint": "http://jaeger:4317"
      }
    },
    "Jwt": {
      "Issuer": "",
      "Audience": "",
      "AccessTokenTtlInMinutes": 2,
      "RefreshTokenTtlInDays": 360,
      "SecurityKey": ""
    },
    "Redis": {
      "ConnectionString": "",
      "RefreshTokensDatabaseNumber": 2,
      "ExchangeRatesHistoryDatabaseNumber": 3,
      "ExchangeRatesDatabaseNumber": 4,
      "DataLockMilliseconds": 1000,
      "DataLockRetryCount": 3,
      "DataLockRetryDelayMilliseconds": 20
    },
    "Integrations": {
      "Frankfurter": {
        "BaseAddress": "",
        "TimeoutSeconds": 0,
        "RetryCount": 1,
        "RetryExponentialIntervalSeconds": 5,
        "CircuitBreakerDurationBreakSeconds": 30,
        "CircuitBreakerMaxExceptions": 2
      }
    }
  }
}
